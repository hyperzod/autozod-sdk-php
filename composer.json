{
    "name": "hyperzod/autozod-sdk-php",
    "description": "A PHP SDK to integrate Autozod with your application.",
    "keywords": [
        "hyperzod",
        "autozod-sdk-php"
    ],
    "homepage": "https://github.com/hyperzod/autozod-sdk-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Azam Siddiqui",
            "email": "siddiquiazam966@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hyperzod\\AutozodSdkPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyperzod\\AutozodSdkPhp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
